<%- include('../../shared/includes/head', { pageTitle: 'SignUp' })%>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header')%>
  <main>
    <h1>Create a new Account</h1>
    <!--- Input Data Validation --->
    <% if (inputData.errorMessage) {%>
      <section class="alert">
        <p><%= inputData.errorMessage %> </p>
      </section>
    <% } %> 
    <!--- Input Data Validation --->
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <label for="fullname">Full Name</label>
        <input type="text" name="fullname" value="<%= inputData.fullname %>" id="fullname" required />
      </p>
      <p>
        <label for="email">Email</label>
          <input type="email" name="email" value="<%= inputData.email %>" id="email" required />
        </p>
      <p>
        <label for="confirm-email">Confirm Email</label>
        <input type="email" name="confirm-email" value="<%= inputData.confirmEmail %>" id="confirm-email" required />
      </p>
      <p>
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          value="<%= inputData.password %>"
          minlength="6"
          required
        />
      </p>
      <hr>
      <p>
        <label for="street">Street</label>
        <input type="text" name="street" value="<%= inputData.street %>" id="street" required />
      </p>
      <p>
        <label for="postal">Postal Code</label>
        <input type="text" name="postal" value="<%= inputData.postal %>" id="postal" required />
      </p>
      <p>
        <label for="city">City</label>
        <input type="text" name="city" value="<%= inputData.city %>" id="city" required />
      </p>   
  
      <button class="btn">Creat Account</button>
      <p id="switch-form"><a href="/login">Login instead</a></p>
    </form>
  </main>
  <%- include('../../shared/includes/footer') %>
