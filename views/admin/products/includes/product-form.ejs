<form
  action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>"
  method="POST"
  enctype="multipart/form-data"
>
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= product.title %>" id="title" required />
  </p>

  <div id="image-upload-control">
    <p>
      <label for="image">Image</label>
      <input type="file" name="image" id="image" accept=".jpg,.png,.jpeg" <% if (imageRequired) {%>required<% } %>  />
    </p>
    <img src="" alt="Select image.">
  </div>

  <p>
    <label for="summary">Summary</label>
    <input type="text" name="summary" id="summary" value="<%= product.summary %>" required maxlength="250" />
  </p>

  <p>
    <label for="price">Price</label>
    <input
      type="number"
      name="price"
      min="0.01"
      value="<%= product.price %>"
      step="0.01"
      id="price"
      required
    />
  </p>

  <p>
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="7" required><%= product.description %></textarea>
  </p>

  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>
